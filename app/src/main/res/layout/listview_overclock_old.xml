<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/dark_background_elevated"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/overclock_icon"
        android:layout_width="@dimen/_52sdp"
        android:layout_height="@dimen/_52sdp"
        android:layout_alignParentStart="true"
        android:background="@drawable/overclock_yellow"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/damage"
        app:tint="@color/darker_white" />

    <LinearLayout
        android:id="@+id/overclock_name_effect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/overclock_icon"
        android:layout_marginStart="@dimen/_4sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/overclock_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/_13ssp"
            android:text="fdsfsdfsdsnavnlsjan"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/overclock_effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:textSize="@dimen/_12ssp"
            android:text="fsdafdsfsdfsdafsdafsdafsdafafasdddddddddddddddddddddddddddddddddddsssssssssssssssssssssssssssssssssssssssssssssssssvczvxczvxzvxczvxczvcxf"
            android:textAlignment="center"
            android:textColor="@color/darker_white" />
    </LinearLayout>

</RelativeLayout>