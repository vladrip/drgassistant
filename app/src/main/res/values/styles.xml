<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DRGStyle" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/light_gray</item>
        <item name="iconTint">@color/light_gray</item>
        <item name="colorPrimary">@color/indian_red</item>
        <item name="colorPrimaryDark">@color/dark_background_elevated</item>
        <item name="floatingActionButtonStyle">@style/MyIndianRedFloatingButton</item>
    </style>

    <style name="MyIndianRedFloatingButton" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/indian_red</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="MyDarkStyleElevated" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/dark_background_elevated</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:tint">@color/light_gray</item>
    </style>
</resources>